@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Registro</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12"></div>

            <form id="registerForm" class="row text-center" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear una cuenta nueva</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.nombre" class="form-control" placeholder=""/>
                    <label asp-for="Input.nombre" class="ms-2 text-muted">Nombre Completo</label>
                    <span asp-validation-for="Input.nombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="ms-2 text-muted">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirmar Contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.direccionCalle" class="form-control"  placeholder="" />
                    <label asp-for="Input.direccionCalle" class="ms-2 text-muted">Calle Principal</label>
                    <span asp-validation-for="Input.direccionCalle" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.ciudad" class="form-control" placeholder="" />
                    <label asp-for="Input.ciudad" class="ms-2 text-muted">Ciudad</label>
                    <span asp-validation-for="Input.ciudad" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.provincia" class="form-control" placeholder="" />
                    <label asp-for="Input.provincia" class="ms-2 text-muted">Provincia</label>
                    <span asp-validation-for="Input.provincia" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.codigoPostal" class="form-control" placeholder="" />
                    <label asp-for="Input.codigoPostal" class="ms-2 text-muted">Código Postal</label>
                    <span asp-validation-for="Input.codigoPostal" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="" />
                    <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Teléfono</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected> --Elegir Rol--</option>
                </select>
                
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Registrar</button>
        </form>
   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
