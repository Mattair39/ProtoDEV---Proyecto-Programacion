@model ProtoDEV___Proyecto_Programacion.Models.Producto
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="d-flex">
        <div class="flex-grow-1">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">Información del Producto</h2>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.nombre)</th>
                                <td class="col-sm-8">@Html.DisplayFor(model => model.nombre)</td>
                            </tr>
                            <tr>
                                <th class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.fabricante)</th>
                                <td class="col-sm-8">@Html.DisplayFor(model => model.fabricante)</td>
                            </tr>
                            <tr>
                                <th class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.SKU)</th>
                                <td class="col-sm-8">@Html.DisplayFor(model => model.SKU)</td>
                            </tr>
                            <tr>
                                <th class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.precioVenta)</th>
                                <td class="col-sm-8">$ @Html.DisplayFor(model => model.precioVenta)</td>
                            </tr>
                            <tr>
                                <th class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Categoria)</th>
                                <td class="col-sm-8">@Html.DisplayFor(model => model.Categoria.nombre)</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="accordion" id="productAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header fw-bold" id="headingDescripcion">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDescripcion" aria-expanded="false" aria-controls="collapseDescripcion">
                                    @Html.DisplayNameFor(model => model.descripcion)
                                </button>
                            </h2>
                            <div id="collapseDescripcion" class="accordion-collapse collapse" aria-labelledby="headingDescripcion" data-bs-parent="#productAccordion">
                                <div class="accordion-body">
                                    @Html.DisplayFor(model => model.descripcion)
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header fw-bold" id="headingEspecificaciones">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEspecificaciones" aria-expanded="false" aria-controls="collapseEspecificaciones">
                                    @Html.DisplayNameFor(model => model.especificaciones)
                                </button>
                            </h2>
                            <div id="collapseEspecificaciones" class="accordion-collapse collapse" aria-labelledby="headingEspecificaciones" data-bs-parent="#productAccordion">
                                <div class="accordion-body">
                                    @Html.DisplayFor(model => model.especificaciones)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <img src="@Url.Content(Model.imagenURL)" alt="Imagen del producto" class="img-fluid" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Regresar
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-success">
                <i class="bi bi-cart3"></i> Agregar al Carrito
            </a>
        </div>
    </div>
</div>