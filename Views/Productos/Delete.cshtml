@model ProtoDEV___Proyecto_Programacion.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Producto</h1>

<h3>¿Estas seguro de querer eliminar el siguiente producto?</h3>
<div>
    <hr />
    <table class="table table-group-divider">
        <tbody>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.nombre)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.nombre)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.descripcion)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.descripcion)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.especificaciones)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.especificaciones)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.fabricante)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.fabricante)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.SKU)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.SKU)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.precioVenta)</th>
                <td class="col-sm-10">$ @Html.DisplayFor(model => model.precioVenta)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.precio)</th>
                <td class="col-sm-10">$ @Html.DisplayFor(model => model.precio)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.precio50)</th>
                <td class="col-sm-10">$ @Html.DisplayFor(model => model.precio50)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.precio100)</th>
                <td class="col-sm-10">$ @Html.DisplayFor(model => model.precio100)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.Categoria)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Categoria.nombre)</td>
            </tr>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.imagenURL)</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.imagenURL)</td>
            </tr>
        </tbody>
    </table>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger">

        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-return-left"></i> Regresar a la lista
        </a>
    </form>
</div>
