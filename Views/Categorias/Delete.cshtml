@model ProtoDEV___Proyecto_Programacion.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Categoría</h1>

<h3>¿Estas seguro de querer eliminar la siguiente categoría?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ordenCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ordenCategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger"> 

        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-return-left"></i> Regresar a la lista
        </a>
    </form>
</div>
