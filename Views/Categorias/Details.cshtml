@model ProtoDEV___Proyecto_Programacion.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>Detalles de la Categoría</h2>
    <hr />
    <table class="table table-group-divider">
        <tbody>
            <tr>
                <th class="col-sm-2"> @Html.DisplayNameFor(model => model.nombre) </th>
                <td class="col-sm-10"> @Html.DisplayFor(model => model.nombre) </td>
            </tr>
            <tr>
                <th class="col-sm-2"> @Html.DisplayNameFor(model => model.ordenCategoria) </th>
                <td class="col-sm-10"> @Html.DisplayFor(model => model.ordenCategoria) </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info">
        <i class="bi bi-pen"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-return-left"></i> Regresar a la lista
    </a>
</div>
