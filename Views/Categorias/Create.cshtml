@model ProtoDEV___Proyecto_Programacion.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nueva Categoria</h1>

<hr />

<div class="row">
    <div class="border p-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2 col-12">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12 pb-2">
                <label asp-for="ordenCategoria" class="control-label"></label>
                <input asp-for="ordenCategoria" class="form-control" />
                <span asp-validation-for="ordenCategoria" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12 pb-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div class="form-floating py-2 col-12">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-return-left"></i> Regresar a la lista
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
